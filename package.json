{
	"name": "lumi-web",
	"version": "0.1.0",
	"description": "Anti-addictive educational app for children",
	"private": false,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"generate-icons": "node scripts/generate-icons.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^25.0.5",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"@vitest/coverage-v8": "^2.1.9",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"vitest": "^2.0.0"
	},
	"type": "module",
	"license": "MIT",
	"homepage": "https://playlumi.app",
	"repository": {
		"type": "git",
		"url": "https://github.com/matheusml/lumi"
	},
	"keywords": [
		"education",
		"kids",
		"math",
		"anti-addiction",
		"svelte",
		"open-source"
	],
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,svelte,json,css,md,html}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@fontsource/nunito": "^5.2.7"
	}
}
